<div class="book col-xs-6 col-md-3 col-lg-2">
  <div class="top">
    <%= image_tag book.cover_url, class: "cover-book" if book.cover_url.present? %>

  </div>
  <div class="book-brackground">
    <!-- <i class="fas fa-minus-circle"></i> -->
    <!-- <i class="fas fa-check-circle"></i> -->
    <i class="fas fa-plus-circle"></i>
    <div class="book-info">
      <h4><%= book.title %></h4>
      <p><%= book.author %></p>
       <%= link_to "+", book_readings_path(book.google_books_id), remote: true, class: "card-link btn-treehouse text-center", method: "post" %>
    </div>
  </div>
</div>

